<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace : DAO 패키지명, 클래스명 -->
  <mapper namespace="com.winter.app.board.notice.NoticeDAO">
  	<sql id="search">
  		<where>
  		<choose>
  			<when test="kind == 'kind1'">BOARDTITLE</when>
  			<when test="kind == 'kind2'">BOARDCONTENTS</when>
  			<otherwise>BOARDWRITER</otherwise>
  		</choose>
  		LIKE CONCAT('%',#{search}, '%')
  		</where>
  	</sql>
  
  	<select id="getTotalCount" resultType="Long" parameterType="Pager">
  		SELECT COUNT(BOARDNUM) FROM NOTICE
  		<include refid="search"></include>
  	</select>
  
  	<select id="getList" resultType="NoticeVO">
  		SELECT * FROM NOTICE
  		<include refid="search"></include>
  		ORDER BY BOARDNUM DESC
  		LIMIT #{startIndex},#{perPage}
  	</select>
  	
  	<insert id="add" parameterType="BoardVO">
  		INSERT INTO NOTICE (BOARDNUM, BOARDWRITER, BOARDTITLE, BOARDCONTENTS, BOARDDATE, BOARDHIT)
  		VALUES (NULL, #{boardWriter},#{boardTitle},#{boardContents}, now(), 0)
  		<!-- 시퀀스대신인거 값이0이거나NULL일경우 숫자증가 -->
  		
  	</insert>
  </mapper>